<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.hashtag.db">
  
  <insert id="create" parameterType="com.ssafy.hashtag.db.dto.ChatDto">
    INSERT INTO chat(opener_id, title, description, location)
    VALUES(#{opener_id},
            #{title},
            #{description},
            #{location})
  </insert>

  <delete id="delete" parameterType="java.lang.Integer">
    DELETE FROM chat WHERE chatroom_pk=#{chat_pk} AND opener_id=#{opener_id}
  </delete>

